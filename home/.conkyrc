# alignment
alignment top_right
background no
gap_x 20 # inner margin: 50px
gap_y 44 # inner margin: 50px, top panel height: 24px
# minimum_size 240 5
# max_text_width 200

# colors and fonts
stippled_borders 0
default_color white
default_outline_color white
default_shade_color black
use_xft yes
xftfont Ubuntu Mono:pixelsize=18
uppercase no
extra_newline no

# Borders
border_width 0
border_inner_margin 0 # for visible negative offsets
border_outer_margin 0
draw_borders no
draw_graph_borders yes
draw_outline no

# Own (transparent) window
no_buffers yes
double_buffer yes
draw_shades yes
own_window yes
own_window_class Conky
own_window_type normal
own_window_argb_visual true
own_window_argb_value 0
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Intervals
update_interval 1.0
cpu_avg_samples 2
net_avg_samples 2

# Misc
use_spacer none
show_graph_scale no
show_graph_range no
out_to_console no
out_to_stderr no

# variable is given either in format $variable or in ${variable}. Latter
# allows characters right after the variable and must be used in network
# stuff because of an argument
# ${font Dungeon:style=Bold:pixelsize=10}I can change the font as well
# ${font Verdana:size=10}as many times as I choose
# ${font Perry:size=10}Including UTF-8,

TEXT
# RENDSZER
${font FontAwesome:pixelsize=36}${goto 50}${voffset -18}${font Ubuntu Mono:style=bold:pixelsize=18}RENDSZER${font} $hr
${offset 50}${color grey}Hosztnév: ${color}${alignr}$nodename
${offset 50}${color grey}Architektúra: ${color}${alignr}$machine
${offset 50}${color grey}Kernel: ${color}${alignr}$kernel
${offset 50}${color grey}Uptime: ${color}${alignr}$uptime

# TELJESÍTMÉNY
${font FontAwesome:pixelsize=36}${goto 50}${voffset -18}${font Ubuntu Mono:style=bold:pixelsize=18}TELJESÍTMÉNY${font} $hr
${offset 50}${color grey}RAM Usage:$color ${alignr}$mem / $memmax - $memperc%
${offset 50}${membar 6}
${offset 50}${color grey}Swap Usage:$color ${alignr}$swap / $swapmax - $swapperc%
${offset 50}${swapbar 6}
${offset 50}${color grey}CPU Usage:$color ${alignr}${freq_g}GHz / ${pre_exec sed -n 's/^model name.*@ \(.*\)$/\1/p' /proc/cpuinfo | uniq} - $cpu%
${offset 50}${cpubar 6}
${offset 50}${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${offset 50}${color grey}Networking: Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}

# ERŐFORRÁSOK
${font FontAwesome:pixelsize=36}${goto 50}${voffset -18}${font Ubuntu Mono:style=bold:pixelsize=18}Erőforrások${font} $hr
# Top CPU
${offset 50}${color grey}Name              PID   CPU%   MEM%
${offset 50}${color}Highest CPU:
${offset 50}${color lightgrey}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${offset 50}${color lightgrey}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${offset 50}${color lightgrey}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${offset 50}${color lightgrey}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}${color}
# Top MEM
${offset 50}${color}Highest MEM:
${offset 50}${color lightgrey}${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${offset 50}${color lightgrey}${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${offset 50}${color lightgrey}${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${offset 50}${color lightgrey}${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}

# FÁJLRENDSZER
${font FontAwesome:pixelsize=36}${goto 50}${voffset -18}${font Ubuntu Mono:style=bold:pixelsize=18}FÁJLRENDSZER${font} $hr
${offset 50}$color/boot ${alignr}${fs_used /boot}/${fs_size /boot}
${offset 50}${fs_bar 6 /boot}
${offset 50}$color/ ${alignr}${fs_used /}/${fs_size /}
${offset 50}${fs_bar 6 /}
