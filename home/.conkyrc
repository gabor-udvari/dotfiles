# alignment
alignment top_right
background no
gap_x 20 # inner margin: 50px
gap_y 44 # inner margin: 50px, top panel height: 24px
# minimum_size 240 5
# max_text_width 200

# colors and fonts
stippled_borders 0
default_color white
default_outline_color white
default_shade_color black
use_xft yes
xftfont Ubuntu Mono:size=12
uppercase no
extra_newline no

# Borders
border_width 0
border_inner_margin 0 # for visible negative offsets
border_outer_margin 0
draw_borders no
draw_graph_borders yes
draw_outline no

# Own (transparent) window
no_buffers yes
double_buffer yes
draw_shades yes
own_window yes
own_window_class Conky
own_window_type normal
own_window_argb_visual true
own_window_argb_value 0
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Intervals
update_interval 1.0
cpu_avg_samples 2
net_avg_samples 2

# Misc
use_spacer none
show_graph_scale no
show_graph_range no
out_to_console no
out_to_stderr no

# variable is given either in format $variable or in ${variable}. Latter
# allows characters right after the variable and must be used in network
# stuff because of an argument
# ${font Dungeon:style=Bold:pixelsize=10}I can change the font as well
# ${font Verdana:size=10}as many times as I choose
# ${font Perry:size=10}Including UTF-8,

TEXT
# RENDSZER
${font FontAwesome:size=24}${goto 50}${voffset -12}${font Ubuntu Mono:style=Bold}RENDSZER${font} $hr
${offset 50}${color grey}Hosztnév: ${color}${alignr}$nodename
${offset 50}${color grey}Kernel: ${color}${alignr}$kernel on $machine
${offset 50}${color grey}Uptime: ${color}${alignr}$uptime
# TELJESÍTMÉNY
${font FontAwesome:size=24}${goto 50}${voffset -12}${font Ubuntu Mono:style=Bold}TELJESÍTMÉNY${font} $hr
${offset 50}${color grey}Frequency (in GHz):$color $freq_g
${offset 50}${color grey}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${offset 50}${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${offset 50}${color grey}CPU Usage:$color $cpu% ${cpubar 4}
${offset 50}${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${offset 50}${color grey}Networking: Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
${offset 50}${color grey}Name              PID   CPU%   MEM%
${offset 50}${color lightgrey}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${offset 50}${color lightgrey}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${offset 50}${color lightgrey}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${offset 50}${color lightgrey}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}${color}
# FÁJLRENDSZER
${font FontAwesome:size=24}${goto 50}${voffset -12}${font Ubuntu Mono:style=Bold}FÁJLRENDSZER${font} $hr
${offset 50}/ $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
